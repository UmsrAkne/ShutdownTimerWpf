<Window x:Class="ShutDownTimer2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShutDownTimer2"
        mc:Ignorable="d"
        Title="{Binding BindingDate, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" Height="160" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="0.5*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">
            <Button Name="plus2hButton" Content="+ 2Hours" Margin="3"/>
            <Button Name="plus1hButton" Content="+ 1Hour" Margin="3"/>
            <Button Name="plus30mButton" Content="+ 30Min" Margin="3"/>
            <Button Name="plus10mButton" Content="+ 10Min" Margin="3"/>
        </StackPanel>

        <StackPanel Grid.Column="1">
            <Button Name="minus2hButton" Content="- 2Hours" Margin="3"/>
            <Button Name="minus1hButton" Content="- 1Hour"  Margin="3"/>
            <Button Name="minus30mButton" Content="- 30Min" Margin="3"/>
            <Button Name="minus10mButton" Content="- 10Min" Margin="3"/>
        </StackPanel>

    </Grid>
</Window>
