<Window x:Class="ShutDownTimer2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShutDownTimer2"
        mc:Ignorable="d"
        Title="{Binding BindingDate, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" Height="160" Width="450">
    <Grid>
        <WrapPanel Orientation="Vertical" Grid.Column="2" Margin="160,0,0,0">
            <Button Content="+ 2Hours" Width="130" Margin="3"/>
            <Button Content="+ 1Hour" Width="130" Margin="3"/>
            <Button Content="+ 30Min" Width="130" Margin="3"/>
            <Button Content="+ 10Min" Width="130" Margin="3"/>
            <Button Content="- 2Hours" Width="130" Margin="3"/>
            <Button Content="- 1Hour" Width="130" Margin="3"/>
            <Button Content="- 30Min" Width="130" Margin="3"/>
            <Button Content="- 10Min" Width="130" Margin="3"/>
        </WrapPanel>
    </Grid>
</Window>
